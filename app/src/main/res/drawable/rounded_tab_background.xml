<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp"/>
            <solid
                android:color="@color/tab_selected_bg"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/black"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item></selector>