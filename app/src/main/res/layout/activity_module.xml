<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity.Module"
    >

    <TextView
        android:id="@+id/ModuleNo"
        android:layout_marginTop="64dp"
        android:textSize="34sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="7dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module 1"
        android:fontFamily="@font/ibmplexsansbold"
        android:gravity="bottom" />

    <TextView
        android:id="@+id/ModuleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/ibmplexmono"
        android:text="HCI Foundations"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/recyclerview_module_text" />

</LinearLayout>